<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_bottom_sheet_dialog_fragment"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_pin" />

                <TextView
                    android:id="@+id/saveCityTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Hyderabad"
                    android:textColor="#2B2B2B"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Back"
                    android:textColor="#4385F5"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>


            <TextView
                android:id="@+id/saveAddressTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:text=""
                android:textColor="#4F4F4F"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#E8E8E8" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/form_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/tower_flat_form_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2" />

                    <LinearLayout
                        android:id="@+id/remaining_form_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/radius_grey_outline_box"
                            android:gravity="bottom"
                            android:padding="15dp">


                            <EditText
                                android:id="@+id/saveApartmentTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Apartment/Socity Name"
                                android:paddingLeft="15dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#2B2B2B"
                                android:textSize="@dimen/_14sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:text="Apartment/Society Name*"
                            android:textColor="#828282" />
                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/radius_grey_outline_box"
                                android:gravity="bottom"
                                android:padding="15dp">


                                <EditText
                                    android:id="@+id/blockTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="Block No"
                                    android:paddingLeft="15dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="#2B2B2B"
                                    android:textSize="@dimen/_14sdp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/white"
                                android:padding="5dp"
                                android:text="Tower/Block No*"
                                android:textColor="#828282" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/radius_grey_outline_box"
                                android:gravity="bottom"
                                android:padding="15dp">


                                <EditText
                                    android:id="@+id/plotTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="Plot No"
                                    android:paddingLeft="15dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="#2B2B2B"
                                    android:textSize="@dimen/_14sdp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/white"
                                android:padding="5dp"
                                android:text="House/Plot No*"
                                android:textColor="#828282" />
                        </RelativeLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/radius_grey_outline_box"
                            android:gravity="bottom"
                            android:padding="15dp">


                            <EditText
                                android:id="@+id/streetAddressTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Street. Colony"
                                android:paddingLeft="15dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#2B2B2B"
                                android:textSize="@dimen/_14sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:text="Street. Area, Colony*"
                            android:textColor="#828282" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/radius_grey_outline_box"
                            android:gravity="bottom"
                            android:padding="15dp">


                            <EditText
                                android:id="@+id/landmarkTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Landmark"
                                android:paddingLeft="15dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#2B2B2B"
                                android:textSize="@dimen/_14sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:text="Landmark"
                            android:textColor="#828282" />
                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/fill_radius_green_box"
                            android:gravity="center"
                            android:text="Home"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/other"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/radius_grey_outline_box"
                            android:gravity="center"
                            android:text="Other"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/saveAsTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Save As*"
                            android:visibility="gone"
                            android:textColor="#4F4F4F" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/other_address_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:id="@+id/other_msg_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_parent_rounded_corner_profile"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/other_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:maxLength="20"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:text=""
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:id="@+id/clear_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/cancel_img"
                                android:visibility="gone" />
                        </RelativeLayout>


                        <CheckBox
                            android:id="@+id/save_as_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="Save as default" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/saveAddressCard"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#4385F5"

            app:cardCornerRadius="12dp">

            <TextView
                android:id="@+id/saveAddressButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:text="@string/save_address"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>